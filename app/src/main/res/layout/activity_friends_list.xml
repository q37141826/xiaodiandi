<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.qixiu.xiaodiandi.ui.activity.mine.vip.FriendsListActivity">

    <RelativeLayout
        android:id="@+id/vg_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></RelativeLayout>

    <LinearLayout
        android:layout_below="@+id/vg_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/back_grey">

        <com.qixiu.wigit.VerticalSwipeRefreshLayout
            android:id="@+id/swiprefresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.jcodecraeer.xrecyclerview.XRecyclerView
                android:id="@+id/xrecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></com.jcodecraeer.xrecyclerview.XRecyclerView>
        </com.qixiu.wigit.VerticalSwipeRefreshLayout>
    </LinearLayout>
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/relativeNothing"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            style="@style/text_normal"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/screenwith_half"
            android:gravity="center"
            android:text="暂无数据"
            android:textColor="@color/hint_color"
            android:textSize="15sp" />
    </RelativeLayout>


</RelativeLayout>
