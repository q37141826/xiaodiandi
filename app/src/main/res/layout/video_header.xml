<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageViewHead"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin174dp"
        android:layout_marginTop="@dimen/margin10dp"
        android:background="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin68dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

        <TextView
            android:id="@+id/textViewVideo"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/ios_video"
            android:gravity="center"
            android:paddingLeft="@dimen/margin50dp"
            android:text="视频"
            android:textColor="@color/txt_FF333333"
            android:textSize="14sp" />

        <View
            android:layout_width="@dimen/margin1dp"
            android:layout_height="@dimen/margin43dp"
            android:background="@color/back_grey"></View>

        <TextView
            android:id="@+id/textViewLegion"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/ios_video"
            android:gravity="center"
            android:paddingLeft="@dimen/margin50dp"
            android:text="点滴联盟"
            android:textColor="@color/txt_FF333333"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin10dp"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/relativelayoutVideoMore"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin40dp"
            android:paddingLeft="@dimen/margin15dp"
            android:paddingRight="@dimen/margin15dp">

            <TextView
                style="@style/text_normal"
                android:layout_centerVertical="true"
                android:text="视频专栏"
                android:textColor="@color/font_grey02"
                android:textSize="16sp" />

            <TextView
                style="@style/text_normal"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="更多"
                android:textSize="14sp" />
        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerviewVideo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin10dp"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/relativelayoutCompanyMore"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin40dp"
            android:paddingLeft="@dimen/margin15dp"
            android:paddingRight="@dimen/margin15dp">

            <TextView
                style="@style/text_normal"
                android:layout_centerVertical="true"
                android:text="公司动态"
                android:textColor="@color/font_grey02"
                android:textSize="16sp" />

            <TextView
                style="@style/text_normal"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="更多"
                android:textSize="14sp" />
        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/compantyAffairs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin10dp"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/relativelayoutConsultingMore"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin40dp"
            android:paddingLeft="@dimen/margin15dp"
            android:paddingRight="@dimen/margin15dp">

            <TextView
                style="@style/text_normal"
                android:layout_centerVertical="true"
                android:text="最新咨询"
                android:textColor="@color/font_grey02"
                android:textSize="16sp" />

            <TextView
                style="@style/text_normal"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="更多"
                android:textSize="14sp" />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>