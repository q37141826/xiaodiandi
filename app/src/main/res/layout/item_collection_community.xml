<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/margin5dp"
    android:paddingTop="@dimen/margin10dp"
    android:paddingRight="@dimen/margin5dp">

    <android.support.v7.widget.CardView
        app:cardElevation="0px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/margin5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin202dp" />

            <TextView
                android:textSize="14sp"
                android:paddingRight="@dimen/margin3dp"
                android:paddingLeft="@dimen/margin3dp"
                android:id="@+id/textViewInfo"
                style="@style/text_normal"
                android:ellipsize="end"
                android:maxLines="2" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/margin4dp"
                android:paddingTop="@dimen/margin8dp"
                android:paddingBottom="@dimen/margin11dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/circularHead"
                    android:layout_width="@dimen/margin28dp"
                    android:layout_height="@dimen/margin28dp" />

                <TextView
                    android:id="@+id/textViewName"
                    style="@style/text_normal"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin5dp"
                    android:layout_toRightOf="@+id/circularHead"
                    android:text="名字"
                    android:textColor="@color/text_grey" />
            </RelativeLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>