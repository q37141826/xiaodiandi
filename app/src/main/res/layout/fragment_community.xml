<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/vg_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></RelativeLayout>

    <com.flyco.tablayout.SlidingTabLayout
        app:tl_tab_space_equal="true"
        app:tl_indicator_width_equal_title="true"
        android:id="@+id/tablelayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin40dp"
        app:tl_underline_color="@color/white"
        app:tl_indicator_color="@color/theme_color"
        app:tl_underline_gravity="BOTTOM"
        app:tl_underline_height="@dimen/margin1dp"
        app:tl_textSelectColor="@color/theme_color"
        app:tl_textUnselectColor="@color/font_grey02"></com.flyco.tablayout.SlidingTabLayout>

    <com.qixiu.wigit.hviewpager.HackyViewPager
        android:background="@color/back_grey"
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></com.qixiu.wigit.hviewpager.HackyViewPager>
</LinearLayout>