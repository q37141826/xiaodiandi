<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/alpha_black_80">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin40dp"
        android:layout_marginRight="@dimen/margin40dp"
        android:background="@drawable/white_btn_bg"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="@dimen/margin10dp"
        android:paddingBottom="@dimen/margin15dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="下载中"
            android:textColor="@color/font_grey" />

        <LinearLayout
            android:layout_marginTop="@dimen/margin5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ProgressBar
                android:id="@+id/progressBar"
                style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="@dimen/margin200dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin20dp"
                android:layout_marginRight="@dimen/margin20dp"></ProgressBar>

            <TextView
                android:id="@+id/textViewProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="%0"
                android:textColor="@color/font_grey" />

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>