<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/margin110dp"
    android:background="@color/white"
    android:paddingLeft="@dimen/margin15dp"
    android:paddingRight="@dimen/margin15dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/margin125dp"
        android:layout_height="@dimen/margin75dp"
        android:layout_marginTop="@dimen/margin18dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="@dimen/margin200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin25dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textViewTiltle"
            style="@style/text_normal"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="标题23980548123123123123123123123759"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textViewTime"
            style="@style/text_normal"
            android:layout_marginTop="@dimen/margin16dp"
            android:text="发布时间"
            android:textColor="@color/text_grey" />
    </LinearLayout>

    <View
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin1dp"
        android:background="@color/line_color"></View>
</android.support.constraint.ConstraintLayout>