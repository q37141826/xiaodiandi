<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/margin5dp">
    <TextView
        android:layout_marginLeft="@dimen/margin20dp"
        android:text="商品名称"
        android:id="@+id/textView_goodsName"
       style="@style/text_normal"
        android:layout_marginBottom="@dimen/margin5dp"
        />
    <RelativeLayout
        android:layout_below="@id/textView_goodsName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1px"-->
        <!--android:layout_marginLeft="@dimen/margin15dp"-->
        <!--android:layout_marginRight="@dimen/margin15dp"-->
        <!--android:background="@color/lineColor"></View>-->


        <ImageView
            android:id="@+id/imageView_orderIcon"
            android:layout_width="@dimen/margin75dp"
            android:layout_height="@dimen/margin75dp" />



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="5dp"
        android:layout_toRightOf="@+id/imageView_orderIcon"
        android:orientation="vertical">

        <TextView
            android:layout_marginRight="@dimen/margin70dp"
            android:id="@+id/textView_goodsContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5px"
            android:text="订单商品简介"
            android:textColor="@color/txt_737373" />
        <TextView
            android:id="@+id/textView_goodsChrac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5px"
            android:text=""
            android:textColor="@color/text_grey" />
        <TextView
            android:id="@+id/textView_goodsPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5px"
            android:text=""
            android:textColor="@color/font_grey" />


    </LinearLayout>

    <TextView
        android:textColor="@color/font_grey"
        android:id="@+id/textView_goodsCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_margin="5dp"
        android:text="X 数量" />
    </RelativeLayout>
</RelativeLayout>