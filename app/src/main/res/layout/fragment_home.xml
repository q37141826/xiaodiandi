<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/vg_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"></RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin60dp"
        android:layout_marginTop="@dimen/margin12dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/textViewGotoScan"
            style="@style/text_normal"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin15dp"
            android:drawableTop="@mipmap/home_scan"
            android:text="扫一扫"
            android:textColor="@color/font_grey02" />

        <TextView
            android:id="@+id/edittext_search"
            android:layout_width="@dimen/margin216dp"
            android:layout_height="@dimen/margin33dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin82dp"
            android:background="@drawable/home_search"
            android:gravity="center_vertical"
            android:hint="搜索喜欢的宝贝"
            android:paddingLeft="@dimen/margin40dp"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/imageViewMessage"
            android:layout_width="@dimen/margin22dp"
            android:layout_height="@dimen/margin22dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin20dp"
            android:src="@mipmap/home_message" />

        <ImageView
            android:id="@+id/imageViewSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin91dp"
            android:src="@mipmap/home_search" />
    </RelativeLayout>

    <com.qixiu.wigit.VerticalSwipeRefreshLayout
        android:id="@+id/swip_refreshlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.jcodecraeer.xrecyclerview.XRecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"></com.jcodecraeer.xrecyclerview.XRecyclerView>


    </com.qixiu.wigit.VerticalSwipeRefreshLayout>


</LinearLayout>