<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/margin55dp"
    android:background="@color/white"
    android:gravity="center_vertical|top"
    android:orientation="vertical">

    <View
        android:id="@+id/viewLine"
        android:layout_width="@dimen/margin1dp"
        android:layout_height="@dimen/margin10dp"
        android:layout_marginLeft="@dimen/margin37dp"
        android:background="#B3B3B3"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circularHead"
            android:layout_width="@dimen/margin45dp"
            android:layout_height="@dimen/margin45dp"
            android:layout_marginLeft="@dimen/margin15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin7dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewPhone"
                style="@style/text_normal"
                android:text="电话号码"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewName"
                    style="@style/text_normal"
                    android:background="@drawable/firends_vip_bg"
                    android:paddingTop="@dimen/margin2dp"
                    android:paddingBottom="@dimen/margin2dp"
                    android:paddingLeft="@dimen/margin7dp"
                    android:paddingRight="@dimen/margin7dp"
                    android:text="环球合伙人"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/textViewId"
                    style="@style/text_normal"
                    android:layout_marginLeft="@dimen/margin4dp"
                    android:text="ID:48125185"
                    android:textColor="@color/text_grey"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>