<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.qixiu.xiaodiandi.ui.activity.mine.vip.InviteActivity">

    <RelativeLayout
        android:id="@+id/vg_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/vg_title"
        android:background="@mipmap/invite_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="@dimen/margin157dp"
            android:layout_height="@dimen/margin157dp"
            android:layout_marginTop="@dimen/margin240dp"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical">
            <!--todo 隐藏这部分-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/circularHead"
                    android:layout_width="@dimen/margin45dp"
                    android:layout_height="@dimen/margin45dp"
                    android:layout_marginLeft="@dimen/margin34dp"
                    android:layout_marginTop="@dimen/margin18dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin7dp"
                    android:layout_marginTop="@dimen/margin27dp"
                    android:layout_toRightOf="@+id/circularHead"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textViewPhone"
                        style="@style/text_normal"
                        android:text="电话号码" />

                    <TextView
                        android:id="@+id/textViewId"
                        style="@style/text_normal"
                        android:text="ID"
                        android:textColor="@color/text_grey" />
                </LinearLayout>

            </RelativeLayout>

            <ImageView
                android:id="@+id/imageErweima"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <TextView
            style="@style/text_normal"
            android:layout_marginTop="@dimen/margin28dp"
            android:gravity="center"
            android:text=""
            android:textColor="@color/white" />


    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/margin41dp">

        <Button
            style="@style/btn_normal"
            android:layout_width="@dimen/margin208dp"
            android:layout_height="@dimen/margin45dp"
            android:layout_centerInParent="true"
            android:background="@mipmap/btn_orange_bg"
            android:onClick="shareInvite"
            android:text="邀请好友" />

    </RelativeLayout>

</RelativeLayout>
