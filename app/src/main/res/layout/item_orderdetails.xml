<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView_orderdetails_icon"
        android:layout_width="@dimen/margin75dp"
        android:layout_height="@dimen/margin75dp" />

    <TextView
        android:textColor="@color/font_grey02"
        android:id="@+id/textView_goodsContent_orderdetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin5dp"
        android:layout_marginTop="@dimen/margin10dp"
        android:layout_toRightOf="@+id/imageView_orderdetails_icon"
        android:text="简介" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_goodsContent_orderdetails"
        android:layout_marginLeft="@dimen/margin5dp"
        android:layout_marginTop="@dimen/margin15dp"
        android:layout_toRightOf="@+id/imageView_orderdetails_icon">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:paddingRight="@dimen/margin10dp">

            <TextView
                android:id="@+id/textView_price_orderdetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="价格"
                android:textColor="@color/red" />

            <TextView
                android:textColor="@color/font_grey02"
                android:id="@+id/textView_count_orderdetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="X" />

        </RelativeLayout>
    </RelativeLayout>


</RelativeLayout>