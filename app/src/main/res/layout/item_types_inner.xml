<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">



        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/margin69dp"
            android:layout_height="@dimen/margin111dp" />

        <TextView
            android:id="@+id/textViewBrand"
            style="@style/text_normal"
            android:layout_height="@dimen/margin24dp"
            android:layout_marginTop="@dimen/margin20dp"
            android:background="@drawable/type_item_namebk"
            android:ellipsize="end"
            android:maxLength="11"
            android:maxLines="1"
            android:paddingLeft="@dimen/margin5dp"
            android:paddingTop="@dimen/margin3dp"
            android:paddingRight="@dimen/margin5dp"
            android:paddingBottom="@dimen/margin3dp"
            android:text="品牌" />

        <TextView
            android:maxLines="2"
            android:paddingRight="@dimen/margin5dp"
            android:paddingLeft="@dimen/margin5dp"
            android:gravity="center"
            android:layout_height="@dimen/margin30dp"

            android:id="@+id/textViewName"
            style="@style/text_normal"
            android:text="名称"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/textViewPrice"
            style="@style/text_normal"
            android:text="价钱"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textViewBuy"
            style="@style/text_normal"
            android:text="立即购买"
            android:textColor="@color/red"
            android:textSize="12sp" />


</LinearLayout>